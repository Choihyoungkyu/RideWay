<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:background="@drawable/layout_round_shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/tv_weeklyEvent"
            android:layout_margin="15dp"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:text="이번 주 가장 오래 달린 회원!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ci_weeklyImage"
                android:src="@drawable/img_default_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/tv_userNickPart"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:gravity="left"
                android:text="이번주의 주인공"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_weeklyUnit"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:gravity="left"
                android:text="당신이 될 수도!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_baseline_query_builder_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_weeklyTime"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="00:00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_weeklyAddress"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="새 기록을 기다립니다!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>